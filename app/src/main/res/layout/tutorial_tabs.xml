<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tutorial.TutorialFragment"
    android:id="@+id/tutorialFragment_parent">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tutorial_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:layout_constraintBottom_toTopOf="@+id/view_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="scrollable"
        app:tabTextColor="#000">


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tab1" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAB3" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAB4" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAB5" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemStep4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAB6" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemStep5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tab6"
            tools:text="TAB7" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_tabs" />


</androidx.constraintlayout.widget.ConstraintLayout>